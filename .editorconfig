# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,html,css,scss}]
charset = utf-8

# 4 space indentation
[*.{html,php}]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[*.js]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or gulpfile.js
[{package.json, gulpfile.js}]
indent_style = space
indent_size = 2
